<Page
    x:Class="Covid19Analysis.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='6' Icon="Important" Label="Display Errors"                            />
            <AppBarButton x:ConnectionId='7' Icon="OpenFile" Label="Load File"                       />
        </CommandBar>
        <TextBox x:ConnectionId='2' x:Name="summaryTextBox" HorizontalAlignment="Left" Margin="12,67,0,0" VerticalAlignment="Top" TextWrapping="Wrap" Text="Summary" Height="276" Width="600" IsReadOnly="True" AutomationProperties.Name="summaryTextBlock"/>
        <TextBlock HorizontalAlignment="Left" Margin="12,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="COVID-19 Analysis"/>
        <Button x:ConnectionId='3' x:Name="duplicateCasesButton" Content="Duplicate Cases" Margin="12,359,0,0" VerticalAlignment="Top"                                   />

        <TextBlock HorizontalAlignment="Left" Margin="205,365,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Lower Threshold"/>
        <TextBox x:ConnectionId='4' x:Name="lowerThresholdTextBox" HorizontalAlignment="Left" Margin="325,359,0,0" Text="{Binding Path=lowerThreshold}" TextWrapping="Wrap" VerticalAlignment="Top"                                                />
        <TextBlock HorizontalAlignment="Left" Margin="424,365,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Upper Threshold"/>
        <TextBox x:ConnectionId='5' x:Name="upperThresholdTextBox" HorizontalAlignment="Left" Margin="544,359,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top"                                                />
    </Grid>
</Page>

